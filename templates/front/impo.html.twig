{% extends "layout.html.twig" %}

{% block title %}
    {{ categorie.nom }}
{% endblock %}

{% block content %}
    <h1 style="text-align: center;font-size: 55px;font-family: 'Space Mono', monospace;letter-spacing: 7px;color: black">
        Catégorie {{ categorie.nom }}</h1>
    <hr size="30" color="#FABA00">
    <div style="margin-top: 60px;" class="container">
    {% for ann in anns %}
        <div style="background-color: #FABA00" class="jumbotron">
            <h1 style="text-align: center;color: white;font-family: 'Comfortaa', cursive;"
                class="display-4">{{ ann.titre }}</h1>
            <div>Annonce crée par {{ app.user.prenom }}</div>
            <hr size="30">
            <img style="max-height: 300px;border-style: solid; display: block;margin-top: 25px;margin-right: auto;margin-left: auto"
                 alt="{{ ann.titre }}"
                 src="{{ asset('images/product/' ~ ann.featuredImage) }}" class="align-content-lg-center">
            <hr>
            <h3 style="text-align: center;color: white;">Déscriptif de l'ann</h3>
            <div style="text-align: center;font-family: 'Comfortaa', cursive;color: black;margin-top: 40px;">{{ ann.contenu | raw }}</div>
            <hr class="my-4">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div>
                {% if ann.services == 'Donner' %}
                    <a style="margin-right: 10px;background-color: grey;border-color: grey;font-size: 18px;display: block;margin-left: auto;margin-right: auto;"
                       class="btn btn-primary btn-lg" href="#" role="button">Récupérer</a>
                {% endif %}
                {% if ann.services == 'Negocier' %}
                    <a style="margin-right: 10px;background-color: grey;border-color: grey;font-size: 18px;display: block;margin-left: auto;margin-right: auto;"
                       class="btn btn-primary btn-lg" href="#" role="button">Négocier avec le vendeur</a>
                {% endif %}
            {% else %}

                <a style="margin-right: 10px;background-color: grey;border-color: grey;font-size: 18px;"
                   class="btn btn-primary btn-lg" href="#" role="button">Connectez-vous</a>
                <a style="margin-right: 10px;background-color: grey;border-color: grey;font-size: 18px;"
                   class="btn btn-primary btn-lg" href="#" role="button">Inscrivez-vous</a>

                </div>
            {% endif %}
        </div>
        </div>
    {% endfor %}
{% endblock %}